# Dummy Accordo Agent - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Configuration
# =============================================================================

# OpenAI API Key (required for MVP)
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Model to use (default: gpt-4)
# OPENAI_MODEL=gpt-4

# =============================================================================
# Alternative LLM Providers (Future)
# =============================================================================

# Anthropic API Key
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google AI API Key
# GOOGLE_API_KEY=your_google_api_key_here

# =============================================================================
# Agent Configuration
# =============================================================================

# Maximum retry attempts for validation loop
MAX_VALIDATION_RETRIES=3

# Output directory for generated .cto files
OUTPUT_DIR=./output

# =============================================================================
# Logging
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
